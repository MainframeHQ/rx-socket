{
  "name": "rx-socket",
  "version": "0.3.2",
  "description": "Rx Subject for Node sockets",
  "repository": "git@github.com:MainframeHQ/rx-socket.git",
  "author": "Mainframe",
  "license": "MIT",
  "files": [
    "lib/*"
  ],
  "main": "lib/index.js",
  "scripts": {
    "clean": "del lib",
    "build:js": "babel src --out-dir lib",
    "build:flow": "flow-copy-source src lib",
    "build": "yarn clean && yarn build:js && yarn build:flow",
    "lint": "eslint src __tests__",
    "lint:fix": "yarn lint --fix",
    "test:types": "flow check",
    "test:unit": "ava",
    "test:cover": "nyc ava",
    "test:coverage": "nyc report --reporter=lcov",
    "test:report": "mkdir -p /tmp/reports/ava && ava --tap | tap-xunit > /tmp/reports/ava/results.xml",
    "test": "yarn lint && yarn test:types && yarn test:cover",
    "test:ci": "yarn lint && yarn test:types && yarn test:report",
    "start": "yarn test && yarn build && yarn test:cover",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.2.0",
    "eslint-config-mainframe": "^1.4.0",
    "flow-bin": "^0.77.0",
    "flow-copy-source": "^2.0.2",
    "nyc": "^12.0.2",
    "prettier": "^1.14.0",
    "rxjs": "^6.2.2",
    "tap-xunit": "^2.3.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
