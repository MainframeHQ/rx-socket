{
  "name": "rx-socket",
  "version": "0.4.1",
  "description": "Rx Subject for Node sockets",
  "repository": "git@github.com:MainframeHQ/rx-socket.git",
  "author": "Mainframe",
  "license": "MIT",
  "files": [
    "lib/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "del lib && yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts\"",
    "lint": "eslint src/*",
    "test:types": "tsc --noEmit",
    "test:unit": "jest",
    "test": "yarn lint && yarn test:types && yarn test:unit",
    "test:ci": "yarn test",
    "start": "yarn test && yarn build",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "oboe": "^2.1.4"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@types/node": "^10.12.24",
    "@types/oboe": "^2.0.28",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "rxjs": "^6.4.0",
    "tap-xunit": "^2.3.0",
    "typescript": "^3.3.3"
  }
}
