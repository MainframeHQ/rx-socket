{
  "name": "rx-socket",
  "version": "0.4.0",
  "description": "Rx Subject for Node sockets",
  "repository": "git@github.com:MainframeHQ/rx-socket.git",
  "author": "Mainframe",
  "license": "MIT",
  "files": [
    "lib/*"
  ],
  "main": "lib/index.js",
  "scripts": {
    "clean": "del lib",
    "build:js": "babel src --out-dir lib",
    "build:flow": "flow-copy-source src lib",
    "build": "yarn clean && yarn build:js && yarn build:flow",
    "lint": "eslint src __tests__",
    "lint:fix": "yarn lint --fix",
    "test:types": "flow check",
    "test:unit": "ava",
    "test:cover": "nyc ava",
    "test:coverage": "nyc report --reporter=lcov",
    "test:report": "mkdir -p /tmp/reports/ava && ava --tap | tap-xunit > /tmp/reports/ava/results.xml",
    "test": "yarn lint && yarn test:types && yarn test:cover",
    "test:ci": "yarn lint && yarn test:types && yarn test:report",
    "start": "yarn test && yarn build && yarn test:cover",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "oboe": "^2.1.4"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0",
    "@babel/core": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.0.0",
    "ava": "^0.25.0",
    "babel-eslint": "^9.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.4.0",
    "eslint-config-mainframe": "^1.4.1",
    "flow-bin": "^0.79.1",
    "flow-copy-source": "^2.0.2",
    "nyc": "^13.0.1",
    "prettier": "^1.14.2",
    "rxjs": "^6.2.2",
    "tap-xunit": "^2.3.0"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  }
}
